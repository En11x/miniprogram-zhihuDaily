page{
  background:#fafafa;
}
/* header */
.header{
  height:500rpx;
  position:relative;
  overflow: hidden;
}
.header image{
  width:100%;
  height:100%;
}
.header .mask{
  position:absolute;
  width:100%;
  height:100%;
  top:0;
  left:0;
  bottom:0;
  background:rgba(0, 0, 0, 0.3);
}
.header .news-title{
  position:absolute;
  left:0;
  bottom:0;
  padding:0 20rpx 60rpx 20rpx;
  font-size:40rpx;
  color:#fff;
}
.header .image_source{
  position:absolute;
  right:20rpx;
  bottom:20rpx;
  font-size:30rpx;
  color:#fff;
}

/* article */
.article{
  padding:40rpx;
  background:#fff;
}
.article .article-title{
  font-size: 40rpx;
  font-weight: bold;
  padding-bottom: 40rpx;
}

.article .author-info{
  width: 100%;
  height:60rpx;
  line-height: 60rpx;
  display: flex;
  overflow: hidden;
  font-size:35rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 20rpx;
}
.article .author-info .author-avatar{
  display: block;
  width:60rpx;
  height:60rpx;
  border-radius:8rpx;
}
.article .author-info text{
  display: block;
  padding-left: 20rpx;
}
.article .author-info .author-bio{
  font-size: 28rpx;
  color:#6a6a6a;
}
.article .article-content text{
  display:block;
  color:#6a6a6a;
  font-size: 35rpx;
  line-height:60rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
  text-align: justify;    /*文本两端对齐*/
  word-wrap: break-word;  /*允许长单词换行到下一行*/
}
.article .article-content .strong{
  font-weight: bold;
}
.article .article-content .em{
  font-style: italic;
}
.article .article-content .blockquote{
  border-left: 2px solid #cde3f1;
  padding-left: 20rpx;
}
.article .article-content image{
  display: block;
  width:100%;
  margin-bottom: 40rpx;
}
.article .view-more{
  margin:40rpx;
  text-align: center;
}
.article .view-more navigator{
  background:#eee;
  font-size: 30rpx;
  padding:10rpx;
  border-radius: 4rpx;
  color:#555;
}
.article .view-more navigator:active{
  background:#cde3f1;
}

.toolbar{
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  height:100rpx;
  background:#fff;
}
.toolbar .items{
  padding:0 20rpx;
  display: flex;
  justify-content: space-around;
}
.toolbar .items .item{
  padding-top:20rpx;
  text-align: center;
  position:relative;
}
.toolbar .items image{
  width:60rpx;
  height:60rpx;
}
.toolbar .item .tips{
  position:absolute;
  top:20rpx;
  left:45rpx;
  background: #019dd6;
  color: #fff;
  display: block;
  font-size: 16rpx;
  padding:5rpx;
  border-radius: 20rpx;
}
